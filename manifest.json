{
  "manifest_version": 2,
  "name": "Intentionality Timer",
  "version": "1.0",
  "description": "Redirects specific pages to an intermediary page with a timer before allowing access",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "assets/icon48.png"
    }
  },
  "icons": {
    "48": "assets/icon48.png"
  },
  "web_accessible_resources": [
    "redirect.html"
  ]
}